<%= search_form_for [:admin, @search], class: "input-group", method: "get" do |f| %>
  <div class = "col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
    <%= f.label :movie_title_cont, t(".search_by_title") %>
    <%= f.text_field :movie_title_cont, 
        placeholder: t(".search_by_title"), class: "form-control title-input" %>
  </div>
  <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
    <label class = "blank">.</label>
    <br/>
    <%= f.submit t(".search"), class: "btn btn-primary" %>
  </div>
<% end %>
