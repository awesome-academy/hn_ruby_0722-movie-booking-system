<%= search_form_for [:admin, @search], class: "input-group", method: "get" do |f| %>
  <div class = "col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
    <%= f.label :name_cont, t(".search_by_name") %>
    <%= f.text_field :name_cont, 
        placeholder: "Search by name", class: "form-control title-input" %>
  </div>
  <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
    <label class = "blank">.</label>
    <br/>
    <%= f.submit "Search", class: "btn btn-primary" %>
  </div>
<% end %>
