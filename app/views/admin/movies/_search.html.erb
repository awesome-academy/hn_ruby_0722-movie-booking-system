<%= search_form_for [:admin, @search], class: "input-group", method: "get" do |f| %>
  <div class = "col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
    <%= f.label :title_or_description_cont, t(".search_by_name_or_descption") %>
    <%= f.text_field :title_or_description_cont, 
    placeholder: t(".search_by_name_or_descripion"), class: "form-control title-input" %>
  </div>
  <div class = "col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
    <%= f.label :genre_name_eq, t(".search_by_genre") %>
    <%= f.select :genre_name_eq, Genre.all.pluck(:name), 
    {:include_blank => true}, { class: "form-control title-input" } %>
  </div>
  <div class = "col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
    <%= f.label :release_date_eq, t(".search_by_release_date") %>
    <%= f.date_field :release_date_eq, include_blank: true, class:"form-control" %>
  </div>
  <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
    <label class = "blank">.</label>
    <br/>
    <%= f.submit t(".search"), class: "btn btn-primary" %>
  </div>
<% end %>
