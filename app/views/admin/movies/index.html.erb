<% provide :title, t(".movie") %>

<h1><%= t ".movie" %></h1>
<%= render partial: "search"%>
<%= link_to new_admin_movie_path, class: "new-genre" do %>
  <span class="fa fa-plus-circle circle"></span>
  <%= t ".create" %>
<% end %>

<div class="table-users">
  <table cellspacing="0">
    <thead>
      <tr>
        <th><%= t ".id" %></th>
        <th><%= sort_link @search, :title, t(".movie") %></th>
        <th><%= t ".poster" %></th>
        <th><%= sort_link @search, :release_date, t(".release_date") %></th>
        <th><%= t ".genre" %></th>
        <th><%= sort_link @search, :status, t(".status") %></th>
        <th><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "movie", collection: @movies %>
    </tbody>
  </table>
</div>
<%== pagy_bootstrap_nav @pagy %>
