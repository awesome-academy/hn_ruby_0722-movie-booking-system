<h2><%= t(".edit") %> <%= resource_name.to_s.humanize %></h2>
<% provide :button_text, t(".submit") %>
<section class="normal-breadcrumb set-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="normal__breadcrumb__text">
          <h2><%= t ".h2" %></h2>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="signup spad">
  <div class="container">
    <div class="row">
      <div class="login__form edit">
        <h3><%= t ".h2" %></h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="input__item">
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            <span class="icon_profile"></span>
          </div>
          
          <div class="input__item">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <span ><i class="fa-solid fa-envelope"></i></span>
          </div>

          <div class="input__item">
            <%= f.number_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
            <span class="icon_phone"></span>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div><%= t(".current") %> <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="input__item">
            <%= f.password_field :password, autocomplete: "new-password",
            placeholder: t(".leave") %>
            <span class="icon_lock"></span>
          </div>

          <div class="input__item">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            <span class="icon_lock"></span>
          </div>

          <div class="input__item">
            <%= f.password_field :current_password, autocomplete: "current-password",
            placeholder: t(".enter") %>
            <span class="icon_lock"></span>
          </div>

          <%= f.submit yield(:button_text), class: "site-btn" %>

        <% end %>

        <%= link_to t(".back"), :back %>
      </div>
    </div>
  </div>
</section>
