<div class="section-title">
  <h5><%= t ".h5" %></h5>
</div>
<%= search_form_for @search_order, url: order_historys_path, remote: true do |f| %>
  <div class="row botom_mar">
    <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
      <%= f.label :activated_at, t(".start"), class:"form-label white_text" %>
      <%= f.date_field :activated_at_date_gteq, include_blank: true, class:"form-control" %>
    </div>
    <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
      <%= f.label :activated_at, t(".end"), class:"form-label white_text" %>
      <%= f.date_field :activated_at_date_lteq, include_blank: true, class:"form-control" %>
    </div>
    <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-2">
      <label class="form-label"> .</label>
      <button type="submit" class="btn btn-danger w-100">
        <i class="fas fa-search search-book"></i>
        <span><%= t ".search" %></span>
      </button>
    </div>
  </div>
<% end %>
<div class="table-responsive">
  <table class="table table-striped b-t b-light">
    <thead>
      <tr>
        <th><%= sort_link(@search_order, :id, t(".payment_id"), class: "th_orderhistory") %></th>
        <th><%= t ".numbers" %></th>
        <th><%= sort_link(@search_order, :activated_at, t(".completed"), class: "th_orderhistory") %></th>
        <th><%= sort_link(@search_order, :total, t(".total"), class: "th_orderhistory") %></th>
        <th><%= t ".details" %></th>
      </tr>
    </thead>
    <tbody id="payments_history">
      <%= render @payments %>
    </tbody>
  </table>
  <% if @payments.present? %>
    <div id="pagy">
      <%= render partial: "shared/pagy", locals: { pagy: @pagy } %>
    </div>
  <% end %>
</div>
