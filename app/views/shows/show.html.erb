<div class="breadcrumb__links">
  <%= link_to root_path do %>
    <i class="fa fa-home"></i><%= t ".home" %>
  <% end %>
  <span><%= link_to t(".movies"), movie_path(params[:movie_id]) %></span>
  <span><%= link_to t(".shows"), movie_shows_path(@movie) %></span>
  <span><%= t ".seats" %></span>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="anime__video__player">
        <%= image_tag("movie_seat.png")%>
        <div class="go-btn">
          <%= link_to payment_path(current_payment) do %>
            <span><%= t ".going" %></span> <i class="fa fa-angle-right"></i>
          <% end %>
        </div>
      </div>
      <div class="anime__details__episodes">
        <div class="section-title">
          <h5><%= t ".seats_list" %></h5>
        </div>
        <%= render @seats %>
      </div>
    </div>
  </div>
</div>
