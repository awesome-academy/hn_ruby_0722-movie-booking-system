<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <%= link_to root_path do %>
            <i class="fa fa-home"></i><%= t ".home" %>
          <% end %>
          <%= link_to t(".movies"), movie_path(params[:movie_id]) %>
          <span><%= t ".shows" %></span>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="normal-breadcrumb set-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="normal__breadcrumb__text">
          <h2><%= t ".shows_list" %></h2>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="blog spad">
  <div class="container">
    <div class="col-lg-12">
      <div class="row">
        <%= render @shows %>
      </div>
      <% if @shows.present? %>
        <%== pagy_bootstrap_nav(@pagy) %>
      <% end %>
    </div>
  </div>
</section>
